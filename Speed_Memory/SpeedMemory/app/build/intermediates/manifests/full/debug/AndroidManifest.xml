<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devint.cindy.speedmemory"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.devint.cindy.speedmemory.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.devint.cindy.speedmemory.activities.EasyGameActivity"
            android:label="Niveau 1"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.devint.cindy.speedmemory.activities.HelpActivity"
            android:label="Aide"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.devint.cindy.speedmemory.activities.FinalActivity"
            android:label="Fin !"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.devint.cindy.speedmemory.activities.OptionsActivity"
            android:label="Options"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.devint.cindy.speedmemory.activities.HardGameActivity"
            android:label="Niveau 3"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.devint.cindy.speedmemory.activities.MediumGameActivity"
            android:label="Niveau 2"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.devint.cindy.speedmemory.activities.ClassementActivity"
            android:label="Classement"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>