<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.devint.cindy.speedmemory.activities.ClassementActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffdddddd">

        <TextView
            android:id="@+id/labelNiveau1"
            android:text="Niveau 1"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#ffffffff"
            android:textAlignment="center"
            android:layout_width="373dp"
            android:layout_margin="5dp"/>

        <ListView
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:id="@+id/listViewScoreNiveau1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/labelNiveau1"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#ffffffff"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/labelNiveau2"
            android:text="Niveau 2"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#ffffffff"
            android:textAlignment="center"
            android:layout_width="373dp"
            android:layout_margin="5dp" />

        <ListView
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:id="@+id/listViewScoreNiveau2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#ffffffff"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/labelNiveau3"
            android:text="Niveau 3"
            android:layout_row="0"
            android:layout_column="2"
            android:background="#ffffffff"
            android:textAlignment="center"
            android:layout_width="373dp"
            android:layout_margin="5dp"/>

        <ListView
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:id="@+id/listViewScoreNiveau3"
            android:layout_below="@+id/labelNiveau3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffffff"
            android:layout_margin="5dp"/>


    </GridLayout>

</RelativeLayout>
